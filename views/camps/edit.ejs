<%-include("../partials/header")%>
<div class="container">
  <div class="row">
    <h1 style="text-align:center;">Edit <%=camp.name%></h1>
      <div class="" style="width:30%; margin: 30px auto">

          <form action="/campgrounds/<%=camp._id%>?_method=put"  method ="post">
               <div class="form-group">
                 <input class="form-control" type="text" name="camps[name]" value="<%= camp.name %>">
               </div>
               <div class="form-group">
                  <input class="form-control" type="number" name="camps[price]" value="<%= camp.price %>" min="0.01" step="0.01" >
               </div>
              <div class="form-group">
                 <input class="form-control" type="text" name="camps[url]" value="<%= camp.iUrl %>">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="camps[des]" value="<%=camp.desc%>">
              </div>
               <div class="form-group">
                 <button class="btn btn-default btn-primary btn-lg btn-block">Submit</button>
               </div>

          </form>
            <a href="/campgrounds">Go back</a>
      </div>

  </div>


</div>
<%-include("../partials/footer")%>
