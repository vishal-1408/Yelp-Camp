<%-include("../partials/header")%>

<div class="container">
  <header class="jumbotron">
    <h1>This is the Camp Grounds Page</h1>
    <p>We showcase the best camp grounds of the world !</p>
    <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a new camp ground</a>
  </header>

  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
     <% for(var i=0;i<=camps.length-1;i++){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src ="<%=camps[i].iUrl %>" >
              <div class="caption">
                <p> <%=camps[i].name%> </p>
               <p><a href="/campgrounds/<%=camps[i]._id%>" class="btn btn-sm btn-primary">Show More</a></p>
              </div>
            </div>
          </div>

  <% } %>
      </div>
  </div>



</div>


<%- include("../partials/footer")%>
